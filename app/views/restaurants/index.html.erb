<div class="container mt-3">
  <h1> All restaurants </h1>
     <%= link_to new_restaurant_path, class: 'text-dark' do %>
      <i class="fas fa-plus-square btn-light"></i>
    <% end %>
  <div>
    <% @restaurants.each do |restaurant| %>
    <div class="card-trip">
      <%# <img src="" /> %>
      <%= image_tag "http://source.unsplash.com/featured/?#{restaurant.category.downcase}&#{rand(1000)}/800x333" %>
      <div class="card-trip-infos">
        <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
        <p><%= restaurant.category %></p>
      </div>
    </div>
    <% end %>
    </div>
</div>
