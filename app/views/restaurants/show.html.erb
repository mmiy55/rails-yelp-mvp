<div class="container mt-3">
<div>
<h1><%= @restaurant.name %></h1>
<p>Category: <%= @restaurant.category %></p>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
</div>
<%= link_to "Back to restaurants list", restaurants_path ,class: "btn-btn-primary" %>

<%# <%= link_to "Leave a review", new_restaurant_review_path(@restaurant) ,class: "btn-btn-primary" %>

<h2> Leave a review </h2>
<div class="container mt-3" >
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.button :submit %>
<% end %>
</div>

<h1> Reviews </h1>
<% if @restaurant.reviews.any? %>
  <ul>
  <% @restaurant.reviews.each do |review| %>
  <li> Rating: <%=review.rating %> Content: <%= review.content %>
  <% end %>
<% else %>
  <p>No reviews yet</p>
<% end %>
</div>
